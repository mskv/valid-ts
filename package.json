{
  "name": "valid-ts",
  "version": "0.0.7",
  "description": "Simple TypeScript validation library with a declarative interface",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mskv/valid-ts.git"
  },
  "keywords": [],
  "author": "Michał Podwórny",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint './src/**/*.ts'",
    "clean-dist": "rm -rf dist",
    "test": "jest $PATTERN",
    "prepublishOnly": "npm run clean-dist && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^23.1.3",
    "jest": "^23.2.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.0"
  },
  "dependencies": {},
  "jest": {
    "transform": { "^.+\\.ts$": "ts-jest" },
    "testRegex": "(/src(/.*)*/__tests__/.*|(\\.|/)(test))\\.ts$",
    "moduleFileExtensions": ["js", "ts"]
  }
}
